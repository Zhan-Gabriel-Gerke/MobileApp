<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnExample.SnowMan"
             Title="SnowMan">
    <AbsoluteLayout BackgroundColor="White">

        <!-- Красная окружность в фиксированных координатах -->
        <Ellipse Stroke="Black" StrokeThickness="4" Fill="Gray"
                 WidthRequest="100" HeightRequest="100"
                 AbsoluteLayout.LayoutBounds="50,100,100,100"
                 AbsoluteLayout.LayoutFlags="None"/>

        <!-- Зелёная окружность по центру экрана, половина ширины/высоты -->
        <Ellipse Stroke="Black" StrokeThickness="3" Fill="Gray"
                 AbsoluteLayout.LayoutBounds="0.5,0.5,0.5,0.5"
                 AbsoluteLayout.LayoutFlags="All"/>

    </AbsoluteLayout>

</ContentPage>