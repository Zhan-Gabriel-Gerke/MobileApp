<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnExample.SnowMan"
             Title="SnowMan">
    <AbsoluteLayout BackgroundColor="White">
        <Frame
        x:Name="head"
        BackgroundColor="LightGray"
        CornerRadius="100"
        HasShadow="False"
        Padding="10,5"
        AbsoluteLayout.LayoutBounds="0.5,0.42,100,100"
        AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Frame
        x:Name="firstRing"
        BackgroundColor="LightGray"
        CornerRadius="100"
        HasShadow="False"
        Padding="10,5"
        AbsoluteLayout.LayoutBounds="0.5,0.6,150,150"
        AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Frame
        x:Name="secondRing"
        BackgroundColor="LightGray"
        CornerRadius="100"
        HasShadow="False"
        Padding="10,5"
        AbsoluteLayout.LayoutBounds="0.5,0.9,200,200"
        AbsoluteLayout.LayoutFlags="PositionProportional"/>
        

    </AbsoluteLayout>

</ContentPage>